; start main program
	TSTO #12
	BOV stack_overflow_error
	ADDSP #8
;  ************************************************************
;  *           CONSTRUCTION DES VTABLES DES CLASSES           *
;  ************************************************************
; Construction de la VTable de la classe Object
	LOAD #null, R0	;     // On garde Dans R0 l'addr de la classe Object pour eviter de le loader a chaque fois !! 
	STORE R0, 1(GB)
	LOAD code.Object.equals, R1	;     // On garde Dans R1 le label 'code.Object.equals' pour la meme raison 
	STORE R1, 2(GB)
; Construction de la VTable de Diviseur
	LEA 1(GB), R2
	STORE R2, 3(GB)
	STORE R1, 4(GB)
	LOAD code.Diviseur.diviser, R2
	STORE R2, 5(GB)
; Variable Declarations : 
	LOAD #null, R0
	STORE R0, 6(GB)
; Beginning of main instructions:
	NEW #2, R2
	BOV tas_plein
	LEA 3(GB), R3
	STORE R3, 0(R2)
	PUSH R2
	BSR init.Diviseur
	POP R2
	STORE R2, 6(GB)
	WSTR "Entrez un entier : "
	RINT
	BOV io_error
	LOAD R1, R2
	STORE R2, 8(GB)
	ADDSP #2
	LOAD 6(GB), R2
	STORE R2, 0(SP)
	LOAD 8(GB), R2
	STORE R2, -1(SP)
	LOAD 0(SP), R2
	CMP #null, R2
	BEQ dereferencement.null
	LOAD 0(R2), R2
	BSR 2(R2)
	SUBSP #2
	STORE R0, 7(GB)
	WSTR "Le résultat est :"
	LOAD 7(GB), R2
	LOAD R2, R1
	WFLOAT
	WNL
	HALT
; end main program
;  ************************************************************
;  *  GENERATION DES INITS ET DES BODY METHODES DES CLASSES   *
;  ************************************************************
init.Diviseur:
	TSTO #0
	BOV stack_overflow_error
	LOAD -2(LB), R2
	LOAD #0x0.0p0, R1
	STORE R1, 1(R2)
	LOAD -2(LB), R2
	LOAD #0x1.4p3, R0
	STORE R0, 1(R2)
	RTS
code.Object.equals:
	LOAD -2(LB), R0
	CMP -3(LB), R0
	SEQ R1
	RTS
code.Diviseur.diviser:
	TSTO #4
	BOV stack_overflow_error
	PUSH R2
	PUSH R3
	PUSH R4
	PUSH R5
	LOAD -3(LB), R2
	CMP #0, R2
	BLT E_Sinon.1
	LOAD -2(LB), R3
	LOAD 1(R3), R2
	LOAD -3(LB), R3
	FLOAT R3, R3
	BOV overflow_error
	LOAD R3, R1
	CMP #0x0.0p0, R1
	BEQ div_zero_error
	DIV R3, R2
	BOV overflow_error
	LOAD R2, R0
	BRA fin.Diviseur.diviser
	BRA E_Fin_if.1
E_Sinon.1:
E_Fin_if.1:
	BRA absence_return_error
fin.Diviseur.diviser:
	POP R5
	POP R4
	POP R3
	POP R2
	RTS
;  ************************************************************
;  * AJOUT DES LABELS ERREURS DEMANDÉES PAR LE PROGRAMME DECA *
;  ************************************************************
stack_overflow_error:
	WSTR "Error: Stack Overflow"
	WNL
	ERROR
overflow_error:
	WSTR "Error: Overflow sur Float"
	WNL
	ERROR
div_zero_error:
	WSTR "Erreur : division par 0"
	WNL
	ERROR
tas_plein:
	WSTR "Erreur : le tas est plein, impossible d'allouer de la memoire"
	WNL
	ERROR
absence_return_error:
	WSTR "Erreur : Absence de return dans le corps d'une methode "
	WNL
	ERROR
dereferencement.null:
	WSTR "Erreur : Dereferencement null"
	WNL
	ERROR
io_error:
	WSTR "Erreur: D'entree incompatible avec la variable "
	WNL
	ERROR
